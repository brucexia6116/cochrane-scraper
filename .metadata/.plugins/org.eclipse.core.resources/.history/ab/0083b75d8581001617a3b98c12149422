package pubmed.author;

import java.util.ArrayList;
import java.util.Iterator;

import org.json.JSONException;

import pubmed.author.sql.SQLConnection;

public class Main {
	public final int LIVE_THREADS = 4;
	private Authors[] a = new Authors[LIVE_THREADS];
	public static void main( String[] args ) throws JSONException, Exception
    {
    	new Main();
    }
	
	public Main(){
		System.out.println("MAIN THREAD: START");
    	SQLConnection con = new SQLConnection("localhost", "3306", "paul", "paul", "[paul3514]");
    	con.open();
    	
    	ArrayList<String> list = con.getReferences();
    	Iterator<String> it = list.iterator();
    	while(it.hasNext()){
    		System.out.println(it.next());
    	}
    	
		Authors a = new Authors("27132542", con);
		a.start();
    	
    	while(!a.isDone){
    		Thread.sleep(40);
    	}
    	
    	
    	
    	
    	con.close();
    	System.out.println("MAIN THREAD: DONE");
	}
}
